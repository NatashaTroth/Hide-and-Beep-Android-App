<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstructionsActivity"
    android:background="@drawable/background_gradient">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="385dp"
        android:layout_height="342dp"
        android:layout_marginTop="333dp"
        android:contentDescription="@string/img_description_grass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_grass" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="185dp"
        android:layout_height="109dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="@string/img_description_clouds"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_3clouds" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="288dp"
        android:layout_height="270dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="156dp"
        android:contentDescription="@string/img_description_clouds"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_thinkingsheepstanding" />

    <TextView
        android:layout_width="156dp"
        android:layout_height="33dp"
        android:layout_marginTop="104dp"
        android:text="Instructions"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:layout_width="191dp"
        android:layout_height="278dp"
        android:layout_marginTop="140dp"
        android:text="When you hit start, you will receive your first hint. Follow the hint to a location, if you are close to the next queue, you phone will start beeping. Once you reach the correct location, you will receive the next hint. Eventually, you will find the final clue which will lead you to the treasure. The treasure will contain a secret code. Enter it into the app to win!
Have fun!"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/startScavengerHunt"
        style="@style/buttonStyle"
        android:layout_width="188dp"
        android:layout_height="69dp"
        android:layout_marginTop="112dp"
        android:text="Start Scavenger hunt"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />



</android.support.constraint.ConstraintLayout>